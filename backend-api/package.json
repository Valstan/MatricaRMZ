{
  "name": "@matricarmz/backend-api",
  "version": "0.9.7",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "pnpm -C ../ledger build",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/database/migrate.ts",
    "user:create": "tsx src/scripts/createUser.ts",
    "users:migrate": "tsx src/scripts/migrateUsersToEmployees.ts",
    "perm:seed": "tsx src/scripts/seedPermissions.ts",
    "sync:backfill-change-log": "tsx src/scripts/backfillChangeLog.ts",
    "sync:emit-snapshot": "tsx src/scripts/emitSyncSnapshot.ts",
    "cleanup:bulk-types": "tsx src/scripts/cleanupBulkEntityTypes.ts",
    "ledger:import": "tsx src/scripts/ledgerImport.ts",
    "backup:nightly": "tsx src/scripts/nightlyBackup.ts",
    "counterparties:merge": "tsx src/scripts/mergeCounterparties.ts"
  },
  "dependencies": {
    "@matricarmz/ledger": "workspace:*",
    "@matricarmz/shared": "workspace:*",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.7.2",
    "bittorrent-tracker": "^11.2.2",
    "cors": "^2.8.5",
    "create-torrent": "^6.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.1",
    "express": "^4.21.2",
    "jose": "^6.1.0",
    "pg": "^8.13.1",
    "webtorrent": "^2.8.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/create-torrent": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.3",
    "@types/webtorrent": "^0.110.1",
    "drizzle-kit": "^0.30.1",
    "supertest": "^7.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  }
