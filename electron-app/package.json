{
  "name": "@matricarmz/electron-app",
  "version": "0.0.9",
  "private": true,
  "type": "module",
  "main": "dist/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Valstan/MatricaRMZ.git"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "lint": "eslint src electron.vite.config.ts drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "dist": "pnpm build && electron-builder"
  },
  "dependencies": {
    "@matricarmz/shared": "workspace:*",
    "better-sqlite3": "^11.7.2",
    "drizzle-orm": "^0.40.1",
    "electron-updater": "^6.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/react": "^18.3.15",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@types/better-sqlite3": "^7.6.12",
    "drizzle-kit": "^0.30.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "ru.matricarmz.app",
    "productName": "MatricaRMZ",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Valstan",
        "repo": "MatricaRMZ"
      }
    ]
  }
}


